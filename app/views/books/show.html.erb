<%= render 'layouts/list', book: @newbook, user: @user %>
<div class="col-xs-9">
<h4>Book detail</h4>
<%= link_to user_path(@book.user_id) do %>
<%= attachment_image_tag @book.user,:profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg"  %>
<%= @book.user.name %>
<% end %>
<%= link_to @book.title, book_path(@book.id) %>
<%= @book.body %>
<% if current_user == @book.user %>
<%=link_to"Edit",edit_book_path(params[:id]) %>
<%=link_to"Destroy",book_path(@book),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %>
<% end %>
</div>