<div class="clo-xs-3">
<h2>User info</h2>

<%= attachment_image_tag user,:profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg"  %>
<table class="table">
	<tbody>
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
      </tr>
  </tbody>
</table>
<%= link_to 'Edit', edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14514" %>

</div>
<div class="row">
<h1>New book</h1>


<%= form_for(book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>
</div>