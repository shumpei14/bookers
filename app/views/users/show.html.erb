<%= render 'layouts/list', book: @book, user: @user %>


<div class="col-xs-9">
	<h1>books</h1>
	<table class="table">
		<thead>

			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<% @books.each do|book| %>
		<tbody>
			<tr>
				<td>
					<%= link_to user_path(book.user_id) do %>
						<%= attachment_image_tag book.user,:profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg"  %>
					<% end %>
				</td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %></td>
			</tr>
		</tbody>
	<% end %>
</table>
</div>
