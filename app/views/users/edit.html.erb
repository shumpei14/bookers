<h1>User info</h1>
<%= form_for(@user) do |f| %>

<h4>name</h4>
<%= f.text_field :name %>


<h4>image</h4>
<%= f.attachment_field :profile_image %>

<h4>Introduction</h4>
<%= f.text_area :introduction %>
<%= f.submit 'Update User' %>

<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <p>error</p>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>